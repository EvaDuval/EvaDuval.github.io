  <!-- Script JavaScript pour gérer la navigation -->
  <script>
    // Fonction pour afficher la section correspondant à l'ancre cliquée
    function afficherSection(idSection) {
      // Masquer toutes les sections
      var sections = document.querySelectorAll('section');
      sections.forEach(function(section) {
        section.style.display = 'none';
      });
      // Afficher la section correspondant à l'id
      var section = document.getElementById(idSection);
      section.style.display = 'block';
    }

    // Fonction pour écouter les clics sur les liens du menu de navigation
    var liens = document.querySelectorAll('nav a');
    liens.forEach(function(lien) {
      lien.addEventListener('click', function(e) {
        // Empêcher le comportement par défaut du lien
        e.preventDefault();
        // Récupérer l'ID de la section cible à partir de l'attribut href
        var idSection = this.getAttribute('href').substring(1);
        // Appeler la fonction pour afficher la section correspondante
        afficherSection(idSection);
      });
    });
  </script>

